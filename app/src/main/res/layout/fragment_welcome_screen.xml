<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.WelcomeScreenFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvCategory"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cvIngredient"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cocktail_category"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/primary_variant_opacity"
            android:text="@string/categories"
            style="@style/welcome_screen_options"/>

    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvIngredient"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvCategory"
            app:layout_constraintBottom_toTopOf="@id/cvAlcoholic"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cocktail_ingredients"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/primary_variant_opacity"
                android:text="@string/ingredients"
                style="@style/welcome_screen_options"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAlcoholic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvIngredient"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cocktail_alcoholic"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/primary_variant_opacity"
                android:text="@string/alcoholic"
                style="@style/welcome_screen_options"/>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFiltersList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:layout_constraintStart_toEndOf="@id/cvCategory"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/welcome_screen_menu_item"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
